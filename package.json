{
  "name": "gh-feedback",
  "author": "Łukasz Jerciński",
  "license": "MIT",
  "version": "1.0.0",
  "description": "Read, reply, react, and resolve GitHub PR feedback on the current branch",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Jercik/gh-feedback.git"
  },
  "type": "module",
  "bin": {
    "gh-feedback": "bin/gh-feedback"
  },
  "files": [
    "bin/",
    "dist/",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "prepare": "git config core.hooksPath .githooks",
    "prepublishOnly": "pnpm run rebuild",
    "build": "tsc -p tsconfig.app.json",
    "clean": "rm -rf dist *.tsbuildinfo",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "fta": "fta-check",
    "knip": "knip",
    "lint": "eslint",
    "rebuild": "pnpm run clean && pnpm run build",
    "start": "pnpm -s run rebuild && node --env-file=.env bin/gh-feedback",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest",
    "typecheck": "tsc -b --noEmit"
  },
  "keywords": [],
  "packageManager": "pnpm@10.25.0",
  "engines": {
    "node": ">=22.14.0"
  },
  "dependencies": {
    "@commander-js/extra-typings": "^14.0.0",
    "commander": "^14.0.2"
  },
  "devDependencies": {
    "@total-typescript/ts-reset": "^0.6.1",
    "@types/node": "^24.10.1",
    "@vitest/coverage-v8": "^4.0.15",
    "eslint": "^9.39.2",
    "eslint-config-axkit": "^1.0.0",
    "fta-check": "^1.4.1",
    "fta-cli": "^3.0.0",
    "knip": "^5.73.4",
    "prettier": "3.7.4",
    "semantic-release": "^25.0.2",
    "typescript": "^5.9.3",
    "vitest": "^4.0.15"
  }
}
